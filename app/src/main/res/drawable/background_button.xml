<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/md_deep_orange_300">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_deep_orange_300" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/md_deep_orange_500"
                android:startColor="@color/md_deep_orange_600"
                android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</ripple>