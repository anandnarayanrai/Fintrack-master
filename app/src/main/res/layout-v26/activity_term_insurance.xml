<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insurance.TermInsuranceActivity">
    <!-- android:fillViewport="true"
                android:focusableInTouchMode="true"
                android:isScrollContainer="false"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/app_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_header2"
            android:padding="6dp">

            <include
                layout="@layout/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_header"
            android:layout_marginBottom="50dp"
            android:fillViewport="true"
            android:isScrollContainer="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/background_login_button"
                    android:importantForAutofill="no"
                    android:paddingTop="8dp"
                    android:shadowColor="@color/color_dark_gray"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/et_cover_amount"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:digits="0123456789"
                        android:drawablePadding="10dp"
                        android:hint="@string/total_life_caver_desired"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/background_login_button"
                    android:importantForAutofill="no"
                    android:paddingTop="8dp"
                    android:shadowColor="@color/color_dark_gray"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/et_annual_income"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:digits="0123456789"
                        android:drawablePadding="10dp"
                        android:hint="@string/annual_income1"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1.3"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title"
                            android:textColor="@color/colorAccent" />

                        <Spinner
                            android:id="@+id/spinner_gender"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/spinner_selector"
                            android:entries="@array/prefix_list"
                            android:popupBackground="@color/colorAccent"
                            android:spinnerMode="dialog" />
                    </LinearLayout>
                    <!--<android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1.5"
                        android:autofillHints="@string/app_name"
                        android:background="@drawable/background_login_button"
                        android:importantForAutofill="no"
                        android:paddingTop="8dp"
                       android:shadowColor="@color/color_dark_gray"
                        android:textColorHint="@color/colorAccent">

                        <EditText
                            android:id="@+id/et_perfix"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@android:color/transparent"
                            android:drawablePadding="10dp"
                            android:hint="Title"
                            android:inputType="textPersonName"
                            android:maxLength="30"
                            android:paddingEnd="0dp"
                            android:paddingStart="10dp"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>-->

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.7"
                        android:autofillHints="@string/app_name"
                        android:background="@drawable/background_login_button"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:paddingTop="8dp"
                        android:shadowColor="@color/color_dark_gray"
                        android:textColorHint="@color/colorAccent">

                        <EditText
                            android:id="@+id/et_customername"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@android:color/transparent"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                            android:drawablePadding="10dp"
                            android:hint="@string/full_name"
                            android:inputType="textPersonName"
                            android:maxLength="30"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/background_login_button"
                    android:importantForAutofill="no"
                    android:paddingTop="8dp"
                    android:shadowColor="@color/color_dark_gray"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/et_dob"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="10dp"
                        android:hint="@string/date_of_birth2"
                        android:imeOptions="actionNext"
                        android:inputType="date"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <!--  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="3">-->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/background_login_button"
                    android:importantForAutofill="no"
                    android:paddingTop="8dp"
                    android:shadowColor="@color/color_dark_gray"
                    android:textColorHint="@color/colorAccent">

                    <AutoCompleteTextView
                        android:id="@+id/ac_country"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz ,()"
                        android:drawablePadding="10dp"
                        android:hint="@string/country"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/background_login_button"
                    android:importantForAutofill="no"
                    android:paddingTop="8dp"
                    android:shadowColor="@color/color_dark_gray"
                    android:textColorHint="@color/colorAccent">

                    <AutoCompleteTextView
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz ,()"
                        android:drawablePadding="10dp"
                        android:hint="@string/state"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/background_login_button"
                    android:importantForAutofill="no"
                    android:paddingTop="8dp"
                    android:shadowColor="@color/color_dark_gray"
                    android:textColorHint="@color/colorAccent">

                    <AutoCompleteTextView
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz ,()"
                        android:drawablePadding="10dp"
                        android:hint="@string/city"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>
                <!--    </LinearLayout>
    -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/background_login_button"
                    android:importantForAutofill="no"
                    android:paddingTop="8dp"
                    android:shadowColor="@color/color_dark_gray"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:digits="0123456789+"
                        android:drawablePadding="10dp"
                        android:hint="@string/mobile"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:autofillHints="@string/app_name"
                    android:background="@drawable/background_login_button"
                    android:importantForAutofill="no"
                    android:paddingTop="8dp"
                    android:shadowColor="@color/color_dark_gray"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789.-_@"
                        android:drawablePadding="10dp"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fontFamily="@font/lato"
        android:text="@string/submit"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>