<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="horizontal"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/layout_equity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mChart"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_sip" />

        <TextView
            android:id="@+id/tv_Equity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/iv_logo"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:text="Fixed Income"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_netpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/lato_bold"
            android:text="Net P/L.  400"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Equity"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/iv_logo"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_einvestment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Investment"
                    android:textColor="@color/md_green_500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_einvestmentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_einvestment"
                    android:fontFamily="@font/lato"
                    android:text="3500.22"
                    android:textColor="@color/colorAccent"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_ecurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Current Value"
                    android:textColor="@color/md_green_500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_ecurrentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ecurrent"
                    android:fontFamily="@font/lato"
                    android:text="3500.00"
                    android:textColor="@color/colorAccent"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_epl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/lato"
                    android:text="P/L"
                    android:textColor="@color/md_green_500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_eplv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_epl"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/lato"
                    android:text="10%"
                    android:textColor="@color/colorAccent"
                    android:textSize="11sp" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
