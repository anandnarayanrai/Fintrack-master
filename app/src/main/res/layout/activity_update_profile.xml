                            android:id="@+id/layout_accountnum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_gender_ma"
                            android:layout_marginTop="7dp"
                            android:autofillHints="@string/app_name"
                            android:shadowColor="@color/color_dark_gray"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/et_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="0123456789"
                                android:hint="Account Number"
                                android:importantForAutofill="noExcludeDescendants"
                                android:inputType="number"
                                android:maxLength="15"
                                android:textSize="15sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_accountnum"
                            android:autofillHints="@string/app_name"
                            android:shadowColor="@color/color_dark_gray"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/et_ifsc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                                android:drawablePadding="10dp"
                                android:hint="IFSC code"
                                android:importantForAutofill="noExcludeDescendants"
                                android:inputType="text"
                                android:maxLength="30"
                                android:textSize="15sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/layout_bankcity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_accountnum"
                            android:autofillHints="@string/app_name"
                            android:shadowColor="@color/color_dark_gray"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/et_bankcity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                                android:drawablePadding="10dp"
                                android:hint="Bank City"
                                android:importantForAutofill="noExcludeDescendants"
                                android:inputType="textPersonName"
                                android:maxLength="30"
                                android:textSize="15sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_bankcity"
                            android:autofillHints="@string/app_name"
                            android:shadowColor="@color/color_dark_gray"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/et_bankbranch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                                android:drawablePadding="10dp"
                                android:hint="Bank Branch"
                                android:importantForAutofill="noExcludeDescendants"
                                android:inputType="textPersonName"
                                android:maxLength="30"
                                android:textSize="15sp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </RelativeLayout>

                <Button
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_rectangle"
                    android:fontFamily="@font/alike_angular"
                    android:onClick="onProfileUpdate"
                    android:text="@string/submit"
                    android:textColor="@color/color_dark_gray" />

            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/app_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_header2"
            android:padding="6dp">

            <include
                layout="@layout/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>